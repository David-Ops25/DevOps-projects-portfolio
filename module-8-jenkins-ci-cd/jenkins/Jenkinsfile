pipeline {
  agent any

  environment {
    IMAGE_NAME = "module8-demo"
    IMAGE_TAG  = "${BUILD_NUMBER}"
    REGISTRY   = "165.22.127.6:8083"
  }

  stages {

    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Test') {
      steps {
        echo "Running tests (placeholder)"
        sh 'echo "No tests yet"'
      }
    }

    stage('Build Image') {
      steps {
        sh '''
          cd module-8-jenkins-ci-cd/app
          docker build -t $IMAGE_NAME:$IMAGE_TAG .
        '''
      }
    }

    stage('Push to Nexus') {
      steps {
        sh '''
          docker tag $IMAGE_NAME:$IMAGE_TAG $REGISTRY/$IMAGE_NAME:$IMAGE_TAG
          docker push $REGISTRY/$IMAGE_NAME:$IMAGE_TAG
        '''
      }
    }

    stage('Deploy (optional)') {
      steps {
        echo "Deployment stage placeholder"
      }
    }
  }

  post {
    success {
      echo " Module 8 pipeline completed successfully"
    }
    failure {
      echo " Module 8 pipeline failed"
    }
  }
}

stage('Build & Push Image') {
  steps {
    dockerBuildAndPush(
      imageName: IMAGE_NAME,
      tag: IMAGE_TAG,
      registry: REGISTRY,
      workDir: 'module-8-jenkins-ci-cd/app'
    )
  }
}
